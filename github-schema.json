{
  "type": "object",
  "title": "GitHub Details",
  "properties": {
    "sync_process_obj": {
      "title": "Process to sync",
      "enum": {{ workspace_process_objs|tojson }},
      "enumNames": {{ workspace_process_names|tojson }},
      "default": {{ default_value|tojson }}
    },
    "sync_repo_obj": {
      "title": "Repo to sync",
      "enum": {{ repo_objs|tojson }},
      "enumNames": {{ repo_names|tojson }}
    },
    "sync_direction": {
      "type": "string",
      "title": "Sync Direction",
      "enum": [
        "Down",
        "Up"
      ]
    }
  },
  "required": [
    "sync_process_obj",
    "sync_repo_obj",
    "sync_direction"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "sync_direction": {
            "const": "Up"
          }
        }
      },
      "then": {
        "properties": {
          "commit_message": {
            "type": "string",
            "title": "Commit Message"
          }
        },
        "required": [
          "commit_message"
        ]
      }
    }
  ]
}